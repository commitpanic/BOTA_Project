# BOTA Project Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ====================
# Django Settings
# ====================
SECRET_KEY=your-secret-key-generate-with-django-get-random-secret-key
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# ====================
# Database Configuration
# ====================
# For PostgreSQL (recommended for production):
DB_ENGINE=django.db.backends.postgresql
DB_NAME=bota_db
DB_USER=bota_user
DB_PASSWORD=your-strong-database-password
DB_HOST=localhost
DB_PORT=5432

# For SQLite (development/small sites):
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# For MySQL/MariaDB:
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=bota_db
# DB_USER=bota_user
# DB_PASSWORD=your-password
# DB_HOST=localhost
# DB_PORT=3306

# ====================
# Email Configuration
# ====================
# Gmail example:
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Other SMTP providers:
# EMAIL_HOST=smtp.your-provider.com
# EMAIL_PORT=587 or 465
# EMAIL_USE_TLS=True or False
# EMAIL_USE_SSL=False or True

# ====================
# Security Settings
# ====================
# Enable these in production with HTTPS:
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ====================
# File Paths
# ====================
STATIC_ROOT=/home/bota/BOTA_Project/staticfiles
MEDIA_ROOT=/home/bota/BOTA_Project/media

# ====================
# Localization
# ====================
TIME_ZONE=Europe/Warsaw
LANGUAGE_CODE=pl

# ====================
# Cache Configuration (Optional)
# ====================
# Redis cache (if installed):
# CACHE_BACKEND=django_redis.cache.RedisCache
# CACHE_LOCATION=redis://127.0.0.1:6379/1

# ====================
# Celery Configuration (Optional)
# ====================
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ====================
# Sentry Monitoring (Optional)
# ====================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ====================
# Development Settings
# ====================
# For local development only:
# DEBUG=True
# ALLOWED_HOSTS=localhost,127.0.0.1
